using System;

   public class Program
{
	public static double fun2(double x)
	{
      double y;
	  y = 4*Math.Pow(x, 1.0/2.0)+2*x*x+1;
	  
	  return y;
	}
  public static void Main()
  {
	  double x=double.Parse(Console.ReadLine());
		double y = fun2(x);
	  Console.WriteLine(y);
  }
}
	 
